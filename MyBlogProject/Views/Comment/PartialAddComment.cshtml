<div class="comment-top">
	<h4>Bir yorum bırak..</h4>
	<div class="comment-bottom">
		<form asp-action="PartialAddComment" asp-controller="Comment" method="post">
			<input class="form-control" type="text" name="CommentUserName" placeholder="Kullanıcı Adı" required="">

			<input class="form-control" type="text" name="CommentTitle" placeholder="Konu Başlığı" required="">

			<textarea class="form-control" name="CommentContent" placeholder="Yorum.." required=""></textarea>
			<button type="submit" class="btn btn-primary submit">Yorum Yap</button>
		</form>
	</div>
</div>