@using EntityLayer.Concrete
@model IEnumerable<Blog>

<div class="row">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Son 10 Blog</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th> BAŞLIK </th>
								<th> KATEGORİ </th>
								<th> TARİH </th>
								<th> DETAYLAR </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="~/writer/assets/images/faces/face1.jpg" class="mr-2" alt="image"> @item.BlogTitle
									</td>
									<td>
										<label class="badge badge-gradient-success">@item.Category.CategoryName</label>
									</td>
									<td> @item.BlogCreatedDate.ToShortDateString() </td>
									<td>
										<a href="/Blog/ReadAllBlogs/@item.BlogID" class="btn-sm btn-dark">Detaylar</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

